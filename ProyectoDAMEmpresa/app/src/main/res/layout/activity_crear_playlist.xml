<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearPlaylistActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/campoNombrePlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la playlist" />

        <CheckBox
            android:id="@+id/checkPublica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist pÃºblica"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/botonCrearPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear playlist"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>