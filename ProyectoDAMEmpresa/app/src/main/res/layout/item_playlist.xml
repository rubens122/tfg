    <TextView
        android:id="@+id/textoCreador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por: usuario@correo.com"
        android:textColor="@color/colorGris"
        android:textSize="14sp" />
</LinearLayout>
